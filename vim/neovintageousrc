" vim: ft=vim

let mapleader=" "

set ignorecase
set smartcase

nnoremap c. /\V\C<C-r>"<CR>cgn<C-a><Esc>
nnoremap d. /\V\C<C-r>"<CR>dgn
nnoremap <silent> [+ :let @"=@+<CR>
nnoremap <silent> [= :let @"=@+<CR>
nnoremap <silent> ]+ :let @+=@"<CR>
nnoremap <silent> ]= :let @+=@"<CR>
nnoremap <silent> ++ :let @o=@" \| let @"=@+ \| let @+=@o<CR>
nnoremap +y "+y
nnoremap +Y "+Y
nnoremap +p "+p
nnoremap +P "+P
vnoremap +y "+y
vnoremap +Y "+Y
vnoremap +p "+p
vnoremap +P "+P
