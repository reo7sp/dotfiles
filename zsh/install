#!/bin/bash

sh -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"

mkdir -p ~/.oh-my-zsh/config
cp my.zsh ~/.oh-my-zsh/config/my.zsh

sed -i.bak 's@^source $ZSH/oh-my-zsh.sh@source ~/.oh-my-zsh/config/my.zsh; source $ZSH/oh-my-zsh.sh@' ~/.zshrc

echo >> ~/.zshrc
echo "alias rm='rm -f'" >> ~/.zshrc
echo "alias cp='cp -f'" >> ~/.zshrc
echo "alias mv='mv -f'" >> ~/.zshrc
